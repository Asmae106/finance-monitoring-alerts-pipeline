@echo off
REM === Configuration de Java ===
SET "JAVA_HOME=C:\Program Files\Java\jdk-17.0.10"
SET "PATH=%JAVA_HOME%\bin;%PATH%"

REM === Aller dans le dossier Kafka ===
cd /d C:\kafka\kafka_2.12-3.8.1\bin\windows

REM === Démarrage de ZooKeeper ===
echo Démarrage de ZooKeeper...
start "ZooKeeper" cmd /k "zookeeper-server-start.bat ..\..\config\zookeeper.properties"

REM === Pause pour laisser ZooKeeper démarrer ===
timeout /t 5 >nul

REM === Démarrage de Kafka ===
echo Démarrage de Kafka...
start "Kafka" cmd /k "kafka-server-start.bat ..\..\config\server.properties"
